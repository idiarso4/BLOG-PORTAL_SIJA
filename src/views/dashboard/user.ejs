        // Update subscription info
        function updateSubscriptionInfo(subscription) {
            document.getElementById('currentPlan').textContent = subscription.subscription.name;
            document.getElementById('planDescription').textContent = subscription.subscription.description;
            document.getElementById('planStatus').textContent = subscription.status;
            document.getElementById('expiryDate').textContent = new Date(subscription.endDate).toLocaleDateString('id-ID');
            document.getElementById('autoRenewal').textContent = subscription.autoRenew ? 'Aktif' : 'Nonaktif';
        }
        
