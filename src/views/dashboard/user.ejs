        // Load subscription
        async function loadSubscription() {
            try {
                const response = await fetch('/api/subscription/current', {
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    }
                });
                
                const data = await response.json();
                
